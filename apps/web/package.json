{
  "name": "web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node get-resources.js && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:report": "next lint --quiet  > lint-output.txt 2>&1",
    "type-check": "tsc --noEmit",
    "type-check:report": "tsc --noEmit > type-check-output.txt 2>&1",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "format": "prettier --write . --plugin=prettier-plugin-tailwindcss",
    "precommit": "prettier --write . && next lint --fix && tsc --noEmit "
  },
  "lint-staged": {
    "*": [
      "prettier --write",
      "next lint --fix",
      "tsc --noEmit"
    ]
  },
  "dependencies": {
    "@auth/core": "^0.30.0",
    "@ayasofyazilim/core-saas": "latest",
    "@novu/react": "^2.6.5",
    "@radix-ui/react-icons": "^1.3.0",
    "@repo/ayasofyazilim-ui": "workspace:^",
    "@repo/ui": "workspace:*",
    "@repo/utils": "workspace:*",
    "@tanstack/react-table": "8.16.0",
    "@types/google-libphonenumber": "^7.4.30",
    "dotenv": "^16.4.5",
    "env-cmd": "^10.1.0",
    "geist": "1.3.0",
    "google-libphonenumber": "^3.2.37",
    "lucide-react": "0.445.0",
    "mini-svg-data-uri": "^1.4.4",
    "next": "14.2.20",
    "next-auth": "5.0.0-beta.16",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "14.1.1",
    "@playwright/test": "^1.44.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "20.11.24",
    "@types/react": "18.3.18",
    "@types/react-dom": "18.3.5",
    "autoprefixer": "10.4.18",
    "lint-staged": "15.2.2",
    "postcss": "8.4.35",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3"
  }
}
